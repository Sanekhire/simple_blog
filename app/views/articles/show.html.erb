<% provide :page_title, @article.title %>

<h2><%= @article.title %></h2>

<time datetime="<%= @article.created_at_formated %>">
  <%= @article.created_at_formated %>
</time>

<p>

  <%= @article.body %>
  <br>
 
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Destroy', article_path(@article), data: {method: :delete, confirm: 'Are you sure?'} %> 
  
</p>


<h2>Add a new comment</h2>

<%= render 'comments/form' %>

<h2>Comments</h2>

<%= render partial: 'comments/comment' %> 
 

