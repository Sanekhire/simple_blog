<% provide :page_title, 'Articles' %>

<h1>Articles</h1>

<%= link_to 'New article', new_article_path %>

<% @articles.each do |article|%> 
<h2><%= article.title %></h2>

<time datetime="<%= article.created_at_formated %>">
<%= article.created_at_formated %>
</time>

<p>
  <%= article.body %>
  <br>
  <%= link_to 'Show', article_path(article) %> |
  <%= link_to 'Edit', edit_article_path(article) %> |
  <%= link_to 'Destroy', article_path(article), data: {method: :delete, confirm: 'Are you sure?'} %> 
  
</p>

<% end %>
